---
// Props
export interface Props {
  title: string;
}
const { title } = Astro.props;

// Meta Data
const finalTitle = `${title} - Lixit Agency`;
const description = `LIXIT Organisation Provides Various Servics And Are 24/7 In The Desk. It is Also know as LOâ„¢. We Provide Service Before The Submission Time!`;

// Components
import Navbar from "@/components/Navbar.astro";
import NavDrawer from "@/components/Drawer.astro";
import Footer from "@/components/Footer.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    {/* External Tags */}
    <meta charset="UTF-8" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">
    <link rel="apple-touch-icon image_src" href="logo.png">
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    {/* Basic Tags */}
    <title>{finalTitle}</title>
    <meta name="description" content={description} />

    {/* Og  & Twitter Tags */}
    <meta property="og:title" content={finalTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/banner.png" />
    <meta property="og:url" content="https://teamlixit.space/" />
    <meta property="og:type" content="website" />
    <meta name="twitter:title" content={finalTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/banner.png" />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body class="bg-white/70 overflow-x-hidden transition ease-in-out">
    <header class="z-40" x-data="{ open: false }">
      <Navbar />
      <NavDrawer />
    </header>
    <main class="mt-12"><slot /></main>
    <footer>
      <Footer />
    </footer>
    <script>
      import AOS from "aos";
      AOS.init();
    </script>
  </body>
</html>
<style is:global>
  /* custom font */
  @import url("https://fonts.googleapis.com/css2?family=Lexend+Deca&display=swap");
  html {
    scroll-behavior: smooth;
    font-family: "Lexend Deca", sans-serif;
  }
</style>