---
// Props
interface Props {
  name: string;
  description: string;
  img?: string;
  yt: string;
  bg: string;
}
const { name, bg, description, img, yt } = Astro.props;
---

<div
  data-aos="flip-right"
  class={`px-5 relative py-7 text-center ${bg} rounded-3xl shadow-md`}
>
  <h5 class="my-2 font-extrabold text-2xl">{name}</h5>
  <p class="my-2 text-sm">{description}</p>
  <div class="my-5">
    <a
      href={`//youtube.com/@${yt}`}
      class="px-4 py-2 rounded-2xl hover:underline tracking-wider border-2 border-black font-semibold"
      target="_blank"
    >
      Checkout Channel â†’
    </a>
  </div>
  {
    img && (
      <img
        src={img}
        class="mx-auto block min-h-1/2 mt-5 shadow-sm rounded-2xl"
        alt="Partner Inage"
      />
    )
  }
</div>
