---
// Props
interface Props {
  name: string;
  description: string;
  icon: string;
}
const { name, description, icon } = Astro.props;
---

<div data-aos="fade-up" class="bg-white shadow-md rounded-2xl px-5 py-7">
  <div set:html={icon} class={`stroke-white mb-4 w-14 h-14`} />
  <h3 class="font-bold text-lg">{name}</h3>
  <p class="text-gray-400">{description}</p>
</div>
