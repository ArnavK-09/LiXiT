---
// Components
import ReviewCard from "@/components/cards/Review.astro";

// Reviews
const reviews: Array<{
  title: string;
  comment: string;
  author: string;
}> = [
  {
    title: "Smooth as butter",
    author: "Bebu, Youtuber",
    comment: `Our server has been running smoother than ever, thanks to the incredible efforts of our amazing server management team. They deserve all the credit for keeping things running smoothly`
  },
  { 
     title: "Well, Done!", 
     author: "Ayush More, Youtuber", 
     comment: `Big shoutout to our incredible Team for making my server such a positive and uplifting space. You all rock and I'm grateful to have you!`, 
   },
];
---

<section
  class="text-center py-11 bg-gradient-to-t from-violet-200"
  id="reviews"
>
  <div>
    <h2 class="text-3xl px-4 font-semibold">What our awesome customers say</h2>
    <p class="my-4 text-black/80">Our reviews are fire as always...</p>
  </div>
  <div class="px-8 md:px-11 grid grid-cols-1 md:grid-cols-2 gap-4">
    {reviews.map((review) => <ReviewCard {...review} />)}
  </div>
</section>
